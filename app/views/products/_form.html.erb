<%= form_with model: @product, local: true do |f| %>
  <div class='col-xs-3'>
    <div class='form-group'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :product_subcategory_id %>
      <%= f.grouped_collection_select :product_subcategory_id, @product_category, :product_subcategories, :name, :id, :name, {}, class: "form-control" %>
    </div>
    <div class='form-group'>
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :price %>
      <%= f.number_field :price, step: 0.01, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :product_condition_id %>
      <%= f.collection_select :product_condition_id, @product_condition, :id, :name, {}, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :quantity %>
      <%= f.number_field :quantity, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :images %>
      <%= f.file_field :images, multiple: true, class: 'form-control-file' %>
    </div>
    <div>
      <%= f.submit 'Enviar', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>