<h2>Meus produtos</h2>

<% @products.each do |product| %>
  <div class='image_list'>
    <%= link_to product.name, product %><br>
    <%= link_to image_tag(product.images.first), product %><br>
    <%= "Preço: #{number_to_currency product.price}" %>
  </div>
<% end %>

<% if @products.empty? %>
    <div>Nenhum produto disponível<div>
<% end %>