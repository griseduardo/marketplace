<% @profile.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>

<%= form_with model: @profile, local: true do |f| %>
  <div>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>
  <div>
    <%= f.label :chosen_name %>
    <%= f.text_field :chosen_name %>
  </div>
  <div>
    <%= f.label :birthday %>
    <%= f.date_field :birthday %>
  </div>
  <div>
    <%= f.label :work_address %>
    <%= f.text_field :work_address %>
  </div>
  <div>
    <%= f.label :position %>
    <%= f.text_field :position %>
  </div>
  <div>
    <%= f.label :sector %>
    <%= f.text_field :sector %>
  </div>
  <div>
    <%= f.label :department_id %>
    <%= f.collection_select :department_id, @department, :id, :name %>
  </div>
  <div>
    <%= f.submit 'Cadastrar' %>
  </div>
<% end %>