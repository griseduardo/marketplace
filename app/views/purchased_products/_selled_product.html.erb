<dl>
  <dt><%= PurchasedProduct.human_attribute_name(:product) %></dt>
  <dd><%= link_to purchased_product.product.name, product_purchased_product_path(purchased_product.product.id, purchased_product.id) %></dd>
  <dt><%= PurchasedProduct.human_attribute_name(:profile) %></dt>
  <dd>
    <% if purchased_product.profile.chosen_name.present? %>
      <%= purchased_product.profile.chosen_name %>
    <% else %>
      <%= purchased_product.profile.full_name %>    
    <% end %>
  </dd>
</dl>